{
    "name": "signinapp",
    "version": "1.0.0",
    "description": "TRAINOR Sign In App",
    "main": "index.js",
    "repository": "git@github.com:trainordigital/signinapp.git",
    "author": "Zubair Aziz <zabaziz@trainor.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development webpack-dev-server",
        "dev:sourcemaps": "NODE_ENV=development SOURCEMAPS=1 webpack-dev-server",
        "build": "NODE_ENV=production webpack",
        "lint": "eslint app/client/src/scripts",
        "lint:fix": "eslint --fix app/client/src/scripts",
        "analyze": "NODE_ENV=production ANALYZE=1 webpack"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage",
                    "corejs": "core-js@3"
                }
            ]
        ]
    },
    "browserslist": [
        "> 0.5%",
        "not op_mini all",
        "not ie 11",
        "not ie 10"
    ],
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "browser": true,
            "es6": true,
            "node": true
        },
        "globals": {
            "Selectors": true,
            "ajax": true,
            "state": true
        },
        "ignorePatterns": [
            "node_modules"
        ],
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2020
        },
        "rules": {
            "no-console": 0,
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "semi": false,
                    "object-property-newline": false
                }
            ],
            "object-property-newline": "off"
        },
        "plugins": [
            "prettier"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "autoprefixer": "^9.8.6",
        "babel-loader": "^8.1.0",
        "cache-loader": "^4.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.1.0",
        "core-js": "^3.6.5",
        "css-loader": "^4.3.0",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-prettier": "^3.1.4",
        "file-loader": "^6.1.0",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "imagemin-webpack-plugin": "^2.4.2",
        "mini-css-extract-plugin": "^0.11.1",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^4.0.1",
        "postcss-nested": "^4.2.3",
        "postcss-pxtorem": "^5.1.1",
        "prettier": "^2.1.1",
        "stylelint-config-recommended": "^3.0.0",
        "svg-spritemap-webpack-plugin": "^3.5.9",
        "url-loader": "^4.1.0",
        "webpack": "^4.44.1",
        "webpack-assets-manifest": "^3.1.1",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.4"
    },
    "dependencies": {
        "@splidejs/splide": "^2.4.14",
        "alpinejs": "^2.7.0",
        "delegated-events": "^1.1.2",
        "easydropdown": "^4.2.0",
        "imask": "^6.0.5",
        "jump.js": "^1.0.2",
        "maska": "^1.2.0",
        "scrollreveal": "^4.0.7",
        "tailwindcss": "^1.8.6",
        "validate.js": "^0.13.1",
        "vanilla-masker": "^1.2.0",
        "verge": "^1.10.2",
        "wretch": "^1.7.2"
    }
}
